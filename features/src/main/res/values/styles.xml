<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBarCollapsed" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppBarExpanded" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/black</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">60dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

</resources>