<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.cvaccari.features.showdetails.presentation.ShowDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageview_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_placeholder"
            srcFromUrl="@{viewModel.showDetails.images.medium}"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/imageview_banner"
            app:layout_constraintBottom_toBottomOf="@id/imageview_banner"
            android:background="@drawable/bg_white_gradient"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/imageview_banner"
            android:layout_marginBottom="@dimen/size_large"
            tools:text="@{viewModel.showDetails.name}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_16"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/size_large"/>

        <com.cvaccari.core_views.stickyrecyclerview.RecyclerViewStickyHeader
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/imageview_banner"
            seasonsEntries="@{viewModel.seasonsList}"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>